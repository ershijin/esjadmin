<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ershijin.esjadmin.dao.RoleMenuMapper">

    <insert id="batchInsert">
        INSERT INTO role_menu (role_id,menu_id,create_time) VALUES
        <foreach collection="collection" item="item" separator=",">
            (#{item.roleId}, #{item.menuId}, #{item.createTime})
        </foreach>

    </insert>

    <select id="listMenuIdsByRoleId" resultType="Long">
        SELECT menu_id FROM role_menu WHERE role_id=#{roleId}
    </select>

    <delete id="deleteByRoleId" parameterType="Long">
        DELETE FROM role_menu WHERE role_id=#{0}
    </delete>
</mapper>
